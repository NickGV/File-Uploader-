<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Mini Google Drive</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Mini Google Drive</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <% if (!user) { %>
            <li class="nav-item">
              <a class="nav-link" href="/auth/login">Login</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/auth/register">Sign Up</a>
            </li>
          <% } else { %>
            <li class="nav-item">
              <a class="nav-link" href="/auth/logout">Logout</a>
            </li>
          <% } %>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container mt-5">
    <% if (!user) { %>
      <div class="text-center">
        <h1 class="mb-4">Welcome to Mini Google Drive</h1>
        <p class="mb-4">To use this application, you need to register or log in first.</p>
        <a href="/auth/login" class="btn btn-primary me-2">Login</a>
        <a href="/auth/register" class="btn btn-secondary">Sign Up</a>
      </div>
    <% } else { %>
      <h1 class="mb-4">Welcome, <%= user.username %>!</h1>
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Your Files and Folders</h2>
        <a href="/upload" class="btn btn-success">Upload New File</a>
      </div>
      
      <div class="row">
        <div class="col-md-6">
          <h3>Folders</h3>
          <ul class="list-group">
            <% if (folders && folders.length > 0) { %>
              <% folders.forEach(folder => { %>
                <li class="list-group-item">
                  <a href="/folders/<%= folder.id %>"><%= folder.name %></a>
                </li>
              <% }) %>
            <% } else { %>
              <li class="list-group-item text-muted">No folders found.</li>
            <% } %>
          </ul>
        </div>
        <div class="col-md-6">
          <h3>Files</h3>
          <ul class="list-group">
            <% if (files && files.length > 0) { %>
              <% files.forEach(file => { %>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                  <span><%= file.name %></span>
                  <div>
                    <a href="/files/<%= file.id %>" class="btn btn-info btn-sm me-2">Details</a>
                    <a href="/files/<%= file.id %>/download" class="btn btn-primary btn-sm">Download</a>
                  </div>
                </li>
              <% }) %>
            <% } else { %>
              <li class="list-group-item text-muted">No files found.</li>
            <% } %>
          </ul>
        </div>
      </div>
    <% } %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
